extends ../layouts/main

block content
  .law-container
    .container
      h1 Areas of Law
      p.lead Explore comprehensive information about different areas of Indian law
      
      .law-categories
        .law-category
          h3 Constitutional Law
          p Fundamental rights, government structure, and constitutional provisions
          a.btn(href='/law/constitutional') Explore →
        
        .law-category
          h3 Criminal Law
          p Indian Penal Code, criminal procedures, and criminal justice
          a.btn(href='/law/criminal') Explore →
        
        .law-category
          h3 Company Law
          p Corporate governance, incorporation, and company regulations
          a.btn(href='/law/company') Explore →
        
        .law-category
          h3 Intellectual Property
          p Patents, trademarks, copyrights, and design rights
          a.btn(href='/law/ip') Explore →
        
        .law-category
          h3 Labour Law
          p Employment rights, industrial relations, and workplace regulations
          a.btn(href='/law/labour') Explore →
        
        .law-category
          h3 Business Law
          p Business registration, licensing, and commercial regulations
          a.btn(href='/law/business') Explore →
        
        .law-category
          h3 Tax Law
          p GST, Income Tax, and tax compliance requirements
          a.btn(href='/law/tax') Explore →
        
        .law-category
          h3 Arbitration & Conciliation
          p Alternative dispute resolution mechanisms
          a.btn(href='/law/arbitration') Explore →
        
        .law-category
          h3 Personal Law
          p Family law, property disputes, and personal matters
          a.btn(href='/law/personal') Explore →
      
      .law-acts-section
        h2 Browse Acts and Legislation
        .acts-links
          a.btn(href='/act/central') Central Acts
          a.btn(href='/act/state') State Acts